<div class='pure-u-1 center'>
  <h1>Edit account info</h1>
  <%= render partial: 'shared/errors', locals: {model: @admin} %>
  <div class='form-container background-white'>
    <%= form_with model: @admin, url: admin_path(@admin), method: 'patch', class: 'pure-form pure-form-stacked' do |f| %>
      <%= f.label :username, 'Username' %>
      <%= f.text_field :username %>
      <%= f.label :email, 'Email' %>
      <%= f.text_field :email %>
      <%= f.label  :password, 'Current password' %>
      <%= f.password_field :password %>
      <%= f.label  :new_password, 'New password' %>
      <%= f.password_field :new_password %>
      <%= f.submit %>
    <% end %>
  </div>
</div>
