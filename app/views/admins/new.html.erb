<div class='pure-u-1 center'>
  <h1>Sign up</h1>
  <%= render partial: 'shared/errors', locals: {model: @admin} %>
  <div class='form-container background-white'>
    <%= form_with model: @admin, class: 'pure-form pure-form-stacked' do |f| %>
      <%= f.label :username, 'Username' %>
      <%= f.text_field :username %>
      <%= f.label :email, 'Email' %>
      <%= f.text_field :email %>
      <%= f.label  :password, 'Password' %>
      <%= f.password_field :password %>
      <%= f.submit 'Create admin account' %>
    <% end %>
  </div>
</div>
