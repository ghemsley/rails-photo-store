<%= javascript_pack_tag 'categorySlider' %>
<%= stylesheet_pack_tag 'categorySlider' %>
<div class='column pure-u-1-1 center'>
  <div class='background-white padding-1 center center-children margin-vertical-1 shadow corner-rounded'>
    <h1 class='margin-0 horizontal-padding-1 uppercase'>Prints</h1>
    <p class='margin-0 horizontal-padding-1 subheading'>Printed photos by Graham Hemsley</p>
  </div>
  <% @categories.each do |category| %>
    <div class='pure-u-1-1 margin-bottom-2'>
      <%= render partial: 'categories/category_slider', locals: {model: category, infinite: true} %>
    </div>
  <% end %>
</div>
