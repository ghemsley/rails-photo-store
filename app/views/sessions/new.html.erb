<div class='pure-u-1 center'>
  <h1>Sign in</h1>
  <div class='form-container background-white'>
    <%= form_with model: @user, url: signin_path, method: :post, class: 'pure-form pure-form-stacked' do |f| %>
      <%= f.label :email, 'Email' %>
      <%= f.text_field :'email' %>
      <%= f.label  :password, 'Password' %>
      <%= f.password_field :password %>
      <%= f.submit 'Sign in' %>
    <% end %>
  </div>
</div>
