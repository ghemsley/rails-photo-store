<%= react_component('ProductCard', 
  full_size: full_size, 
  show_description: show_description, 
  name: model.name, 
  id: model.id, 
  description: model.description, 
  price: model.price, 
  price_unit: model.price_unit, 
  url: product_url(model), 
  image: url_for(model.image), 
  thumbnail: url_for(model.image.variant(resize_to_limit: [480, 720]).processed), 
  thumbnail_large: url_for(model.image.variant(resize_to_limit: [1440, 2160]).processed), 
  dimensions_json: model.dimensions_json, 
  lightbox: lightbox, 
  class_name: class_name ) %>
