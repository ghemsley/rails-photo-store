<div class='pure-u-1 center'>
  <h1>Edit dimension with id <%= @dimension.id %> for product <%= @product_id %></h1>
  <%= render partial: 'shared/errors', locals: {model: @dimension} %>
  <div class='form-container background-white'>
    <%= form_with model: @dimension, url: category_product_dimension_path(@category_id, @product_id, @dimension), method: 'patch', class: 'pure-form pure-form-stacked' do |f| %>
      <%= render partial: 'dimension_fields', locals: {form: f} %>
      <%= f.submit 'Update dimension' %>
    <% end %>
    <% if @dimension.product.dimensions.count > 1 %>
      <%= button_to 'Destroy this dimension', category_product_dimension_path(@category_id, @product_id, @dimension), method: 'delete' %>
    <% end %>
  </div>
  <div class='edit-links'>
    <%= link_to "Go to edit form for product #{@product_id}", edit_category_product_path(@category_id, @product_id) %>
    <% @dimension.product.dimensions.each do |dimension| %>
      <%= dimension.id != @dimension.id ? (link_to "Go to edit form for dimension #{dimension.id} of product #{@product_id}", edit_category_product_dimension_path(@category_id, @product_id, dimension)) : nil %>
    <% end %>
    <%= link_to "Go to edit form for price modifier of dimension #{@dimension.id} of product #{@dimension.product.id}", edit_category_product_dimension_price_modifier_path(@category_id, @product_id, @dimension, @dimension.price_modifier) %>
  </div>
</div>
